<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <img class="w-full h-64 object-cover" src="{{film.cover_image_url}}" alt="{{film.title}}">
  <div class="p-6">
    <h1 class="text-2xl font-bold mb-4">{{film.title}}</h1>
    <p class="text-gray-700 mb-4">{{film.description}}</p>
    <p class="text-gray-500 mb-2">Director: {{film.director}}</p>
    <p class="text-gray-500 mb-2">Genre: {{film.genre}}</p>
    <p class="text-gray-500 mb-2">Release Year: {{film.release_year}}</p>
    <p class="text-gray-500 mb-6">Duration: {{film.duration}} minutes</p>
    <p class="text-gray-500 mb-6">Price: {{film.price}}</p>
    
    {{#if loggedIn}}
      {{#if isBought}}
      <p class="text-gray-500">You have already bought this film.</p>
      {{else}}
      <form action="/buy-film-btn/{{film.id}}" method="POST" class="inline">
        <button class="bg-green-500 text-white py-2 px-4 rounded">
          Buy
        </button>
      </form>
      {{/if}}
    {{else}}
      <div class="bg-blue-500 text-white py-2 px-4 rounded">
        Login to buy the film
      </div>
    {{/if}}
  </div>
</div>

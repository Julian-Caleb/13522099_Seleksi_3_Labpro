<div class="bg-black shadow-md overflow-hidden min-w-screen min-h-screen p-8 flex flex-col">
  <div class="flex flex-row items-center justify-center p-8">
    <img class="h-64 object-cover" src="{{film.cover_image_url}}" alt="{{film.title}}">
    <div class="p-6">
      <h1 class="text-4xl text-white font-bold mb-4">{{film.title}}</h1>
      <p class="text-white text-justify mb-4 ">{{film.description}}</p>
      <p class="text-white text-justify mb-2">Director: {{film.director}}</p>
      <p class="text-white text-justify mb-2">Genre: {{film.genre}}</p>
      <p class="text-white text-justify mb-2">Release Year: {{film.release_year}}</p>
      <p class="text-white text-justify mb-2">Duration: {{film.duration}} minutes</p>
      <p class="text-white text-justify mb-6">Price: {{film.price}}</p>
      
      {{#if loggedIn}}
        {{#if isBought}}
        <a href="/films/watch/{{film.id}}" class="bg-green-500 text-white py-2 px-4 rounded">Watch Now</a>
        {{else}}
        <form action="/buy-film-btn/{{film.id}}" method="POST" class="inline">
          <button class="bg-green-500 text-white py-2 px-4 rounded">
            Buy
          </button>
        </form>
        {{/if}}
      {{else}}
        <div class="bg-blue-500 text-white py-2 px-4 rounded">
          Login to buy the film
        </div>
      {{/if}}
    </div>
  </div>
  <form action="/back-films-btn-redirect" method="POST" class="inline">
      <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          Back
      </button>
  </form>
</div>
